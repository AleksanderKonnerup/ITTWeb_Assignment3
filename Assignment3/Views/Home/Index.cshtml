@{
    ViewData["Title"] = "ITTWeb Assignment 3";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox" href="Components/ComponentsIndex">
        <div class="item"> 
            <div class="carousel-caption" role="option">
                <h1>
                    Components
                </h1>
                <p>
                    Click here to:
                    <br />
                    - View more info about Components.
                    <br />
                    - Create new Components
                    <br />
                    - Delete Components
                    <br />
                    - Edit Components
                </p>
            </div>
        </div>
        <div class="item">
            <h1 style="text-align: center">
                @Html.ActionLink("Component Types", "ComponentTypesIndex", "ComponentTypes")
            </h1>
            <div class="carousel-caption" role="option">
                <p>
                    Click here to:
                    <br/>
                    - View more info about Component Types.
                    <br/>
                    - Create new Components Types
                    <br/>
                    - Delete Component Types
                    <br/>
                    - Edit Components Types
                </p>
            </div>
        </div>
        <div class="item">
            <h1 style="text-align: center">
                @Html.ActionLink("Component Categories", "ComponentCategoriesIndex", "ComponentCategories")
            </h1>
            <div class="carousel-caption" role="option">
                <p>
                    Click here to:
                    <br />
                    - View more info about Component Categories.
                    <br />
                    - Create new Component Categories
                    <br />
                    - Delete Component Categories
                    <br />
                    - Edit Component Categories
                </p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>