@model Assignment3.Models.ComponentType

@{
    ViewData["Title"] = "Delete Component Type";
    Layout = "_Layout";

}
<html>
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
     
    <link rel="stylesheet" href="~/css/templatemo-style.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/typed.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/custom.js"></script>
</head>


<body id="top">
    <div class="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>
    <h2>Delete Component Type</h2>

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div>
        <h4 style="font-weight: bold">Component Type</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Image")
            </dt>
            <dd>
                @if (Model.Image != null)
                {
                    var imgsourceFromUrlActions = Url.Action("GetImgFromComponentType", "ComponentTypes", new { id = Model.ComponentTypeId });

                    <img src="@imgsourceFromUrlActions" alt="@Model.FileName" height="200" width="200" />
                }
            </dd>
            <dt>
                @Html.DisplayName("Component Name")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ComponentName)
            </dd>
            <dt>
                @Html.DisplayName("Component Info")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ComponentInfo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Datasheet)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Datasheet)
            </dd>
            <dt>
                @Html.DisplayName("Image Url")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>
            <dt>
                @Html.DisplayName("Wiki Link")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.WikiLink)
            </dd>
            <dt>
                @Html.DisplayName("Admin Comment")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AdminComment)
            </dd>
        </dl>

        <div class="row">
            @using (Html.BeginForm("Delete", "ComponentTypes", FormMethod.Post))
            {
                @Html.Hidden("id", Model.ComponentTypeId)
                <div class="col-lg-2 col-md-2 col-sm-2" style="text-align: right">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
            <div class="col-lg-2 col-md-2 col-sm-2" style="text-align: left">
                <a asp-action="ComponentTypesIndex" class="btn btn-primary">Back to List</a>
            </div>

        </div>
    </div>
</body>
</html>