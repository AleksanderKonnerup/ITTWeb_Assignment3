@model Assignment3.ViewModels.ComponentCreateViewModel

@{
    ViewData["Title"] = "Create New Component";
    Layout = "_Layout";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
     
    <link rel="stylesheet" href="~/css/templatemo-style.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/typed.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/custom.js"></script>
</head>


<body id="top">
    <div class="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>

    <h2>Create</h2>
    <div class="container">
        <h4>Component</h4>
        <hr />
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <form asp-action="CreateComponent" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*@Html.ListBoxFor(x => x.SelectedCategories, Model.Categories, new { style = "width: 350px", multiple = "multiple", required = true, @class = "form-control" })*@
                        @Html.DropDownListFor(x => x.SelectedComponentTypeId, new SelectList(Model.ComponentTypes.Select(x => x.ComponentTypeId)), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.ComponentNumber" class="control-label">Component Number</label>
                        <input asp-for="@Model.Component.ComponentNumber" class="form-control" />
                        <span asp-validation-for="@Model.Component.ComponentNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.SerialNo" class="control-label">Serial No</label>
                        <input asp-for="@Model.Component.SerialNo" class="form-control" />
                        <span asp-validation-for="@Model.Component.SerialNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.Status" class="control-label"></label>
                        <select asp-for="@Model.Component.Status" asp-items="@(Html.GetEnumSelectList<ComponentStatus>())" class="form-control"></select>
                        <span asp-validation-for="@Model.Component.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.AdminComment" class="control-label">Admin Comment</label>
                        <input asp-for="@Model.Component.AdminComment" class="form-control" />
                        <span asp-validation-for="@Model.Component.AdminComment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.UserComment" class="control-label">User Comment</label>
                        <input asp-for="@Model.Component.UserComment" class="form-control" />
                        <span asp-validation-for="@Model.Component.UserComment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Component.CurrentLoanInformationId" class="control-label">Current Loan Information Id</label>
                        <input asp-for="@Model.Component.CurrentLoanInformationId" class="form-control" />
                        <span asp-validation-for="@Model.Component.CurrentLoanInformationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </form>
                
                <div>
                    <a asp-action="ComponentIndex" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
