@model Assignment3.ViewModels.ComponentIndexViewModel

@{
    ViewData["Title"] = "Components";
    Layout = "_Layout";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
     
    <link rel="stylesheet" href="~/css/templatemo-style.css">

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/typed.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/custom.js"></script>
</head>


<body id="top">
    <div class="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>
    <h2>Index</h2>

    <p>
        <a asp-action="CreateComponent">Create New</a>
    </p>

    @using (Html.BeginForm("ComponentIndexForType", "Components", FormMethod.Get))
    {
        <div class="col-lg-4 col-md-4 col-sm-4" style="text-align: right; padding-left: 0px">
            @Html.DropDownListFor(x => x.SelectedComponentTypeId, Model.ComponentTypes.Select(x => new SelectListItem{Text = x.ComponentName, Value = x.ComponentTypeId.ToString()}), new { @class = "form-control", style = "width: 250px" })
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2" style="text-align: left">
            <input type="submit" id="GetSessionsBtn" value="Select" class="btn btn-primary" />
        </div>
    }
<br/>
<hr/>
<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Component Type Id")
                </th>
                <th>
                    @Html.DisplayName("Component Number")
                </th>
                <th>
                    @Html.DisplayName("Serial No")
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th>
                    @Html.DisplayName("Admin Comment")
                </th>
                <th>
                    @Html.DisplayName("User Comment")
                </th>
                <th>
                    @Html.DisplayName("Current Loan Information Id")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Components)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComponentTypeIdsList.ToArray()[1])
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComponentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SerialNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminComment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserComment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentLoanInformationId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ComponentId">Edit</a>
                        <br />
                        <a asp-action="Delete" asp-route-id="@item.ComponentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
